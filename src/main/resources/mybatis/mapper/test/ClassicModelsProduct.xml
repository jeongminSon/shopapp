<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.oliveyoung.shopapp.feature.test.ClassicModelsProductMapper">

    <select id="selectClassicModelsProducts" parameterType="kr.co.oliveyoung.shopapp.feature.test.ClassicModelsProductCriteria"
            resultType="kr.co.oliveyoung.shopapp.feature.test.ClassicModelsProduct">
        SELECT
            productCode,
            productName,
            productLine,
            productScale,
            prouctVendor,
            productDescription,
            quantityInStock,
            buyPrice,
            msrp
        FROM products
        <if test="selectCount != null and selectCount > 0">
        LIMIT #{selectCount}
        </if>
    </select>

</mapper>